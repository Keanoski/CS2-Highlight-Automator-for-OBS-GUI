<Window x:Class="CS2_auto_highlights_gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS2_auto_highlights_gui"
        mc:Ignorable="d"
        Title="HighlightReel Automator" Height="600" Width="800" MinWidth="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Margin="15" IsEnabled="{Binding IsIdle}">

            <StackPanel DockPanel.Dock="Top">
                <Label Content="CS2 Demo File Path:" FontWeight="SemiBold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding DemoPath, UpdateSourceTrigger=PropertyChanged}" Padding="5" VerticalContentAlignment="Center"/>
                    <Button Grid.Column="1" Content="Browse..." Margin="5,0,0,0" Padding="10,5" Command="{Binding BrowseForDemoFileCommand}"/>
                </Grid>

                <Label Content="CS2 Executable Path:" Margin="0,10,0,0" FontWeight="SemiBold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding Cs2Path, UpdateSourceTrigger=PropertyChanged}" Padding="5" VerticalContentAlignment="Center"/>
                    <Button Grid.Column="1" Content="Browse..." Margin="5,0,0,0" Padding="10,5" Command="{Binding BrowseForCs2Command}"/>
                </Grid>

                <Label Content="OBS WebSocket Settings:" Margin="0,15,0,0" FontWeight="SemiBold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <Label Content="IP Address:"/>
                        <TextBox Text="{Binding ObsIp, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="5,0,5,0">
                        <Label Content="Port:"/>
                        <TextBox Text="{Binding ObsPort, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Margin="5,0,0,0">
                        <Label Content="Password:"/>
                        <TextBox Text="{Binding ObsPassword, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>
                    </StackPanel>
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <Button Content="1. Find Highlights"
                            Command="{Binding FindHighlightsCommand}"
                            Padding="10,5"/>
                    <Button Content="2. Record Highlights"
                            Command="{Binding LaunchAndRecordCommand}"
                            FontWeight="Bold"
                            Margin="10,0,0,0"
                            Padding="10,5"/>
                </StackPanel>
            </StackPanel>

            <DataGrid ItemsSource="{Binding Highlights}"
                      Margin="0,15,0,0"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Player" Binding="{Binding PlayerName}" Width="*"/>
                    <DataGridTextColumn Header="Round" Binding="{Binding RoundNumber}" Width="Auto"/>
                    <DataGridTextColumn Header="Kills" Binding="{Binding KillCount}" Width="Auto"/>
                    <DataGridTextColumn Header="Damage" Binding="{Binding TotalDamage}" Width="Auto"/>
                    <DataGridTextColumn Header="Weapons" Binding="{Binding WeaponsUsed}" Width="2*"/>
                    <DataGridTextColumn Header="Start Tick" Binding="{Binding StartTick}" Width="Auto"/>
                    <DataGridTextColumn Header="End Tick" Binding="{Binding EndTick}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <StatusBar Grid.Row="1">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}" Margin="5,2"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>